@using CRBS.ViewModels
@model IEnumerable<ProfileViewModel>
@{
    ViewData["Title"] = "Users";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Message!</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container">

    <div class="row d-flex justify-content-center">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 p-3 bg-body-tertiary">
            <h4 class="p-2 bg-body-tertiary ms-2">Users</h4>
            <a asp-action="Create" class="btn btn-success ms-2 mt-4">Add User</a>
            <div class="mt-2 m-2">

                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>    
                            <th>Email</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.Name</td>
                                <td>@r.Email</td>
                                <td>@r.Role</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-primary btn-sm">Edit</a>
                                    <a asp-action="Details" asp-route-id="@r.Id" class="btn btn-warning btn-sm">Details</a>
                                    <a asp-action="Delete" asp-route-id="@r.Id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
            </div>
        </div>
    </div>
</div>

